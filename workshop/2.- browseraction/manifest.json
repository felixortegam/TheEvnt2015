{
  "name" : "TheEvnt Extension",
  "short_name" : "TheEvntEx",
  "version" : "0.0.1",
  "description" : "Extensi√≥n del workshop de TheEvnt",
  "icons": { 
  		"16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
  },
  "background" : {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "permissions": [
          "tabs"
        ],  
  "content_scripts" : [
    {
      "matches" : [ 
         "http://*/*",
         "https://*/*"
      ],
      "js" : [ "contentscript.js"],
      "run_at" : "document_start",
      "all_frames" : false
    }
  ],
  "browser_action":{
	  "default_icon": {
          "19": "icons/kini19.png",
          "38": "icons/kini38.png"
      },
	  "default_title": "TheEvnt Button",
	  "default_popup": "popup/popup.html"
  },
  "manifest_version": 2
}
